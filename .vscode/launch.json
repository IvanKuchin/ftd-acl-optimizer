    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ftd-acl-optimizer'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ftd-acl-optimizer",
                    "--package=ftd-acl-optimizer"
                ],
                "filter": {
                    "name": "ftd-acl-optimizer",
                    "kind": "bin"
                }
            },
            "args": [
                "analyze",
                "-f",
                "examples/rule_report",
                "-r",
                "Custom_rule1"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ftd-acl-optimizer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ftd-acl-optimizer",
                    "--package=ftd-acl-optimizer"
                ],
                "filter": {
                    "name": "ftd-acl-optimizer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}